{
  "manifest_version": 3,
  "name": "BerlinTech Kommo",
  "version": "1.0.0",
  "action": { "default_popup": "index.html" },
  "permissions": ["activeTab", "scripting", "storage", "tabs"],

  "content_scripts": [
    {
      "js": ["src/content.ts"],
      "matches": ["https://subscriptionberlintechai.kommo.com/*"]
    }
  ],
  "background": {
    "service_worker": "src/background.ts"
  }
}
